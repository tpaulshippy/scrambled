<div id="players_list">
  <div class="bg-white border border-gray-200 rounded-2xl p-4 h-full">
    <h3 class="text-lg lg:text-xl font-bold text-gray-900 mb-4 text-center">
      Players (<%= game.players.count %>)
    </h3>
    
    <% if game.players.any? %>
      <div class="space-y-3 max-h-[500px] overflow-y-auto">
        <% game.players.by_score.each do |player| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-200">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <% if player.ready? %>
                  <div class="w-4 h-4 bg-green-500 rounded-full"></div>
                <% else %>
                  <div class="w-4 h-4 bg-gray-300 rounded-full"></div>
                <% end %>
              </div>
              
              <div class="min-w-0 flex-1">
                <div class="font-medium text-gray-900 truncate">
                  <%= player.nickname %>
                  <% if Player.find_by(id: session[:player_id]) == player %>
                    <span class="text-xs text-blue-600 font-bold">(You)</span>
                  <% end %>
                </div>
                <div class="text-sm text-gray-500">
                  <% if game.playing? || game.finished? %>
                    Score: <%= player.score %>
                  <% elsif player.ready? %>
                    Ready ✓
                  <% else %>
                    Not ready
                  <% end %>
                </div>
              </div>
            </div>
            
            <% if game.playing? && player.current_answer.present? %>
              <div class="text-sm text-green-600 font-medium">✓</div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="flex items-center justify-center h-32">
        <p class="text-center text-gray-500">No players yet</p>
      </div>
    <% end %>
  </div>
</div>