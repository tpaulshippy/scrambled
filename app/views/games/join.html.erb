<div class="max-w-md mx-auto text-center">
  <h1 class="text-3xl font-bold text-gray-900 mb-4">Join Game</h1>
  <div class="text-4xl font-mono font-bold text-blue-600 mb-8"><%= @game.code %></div>
  
  <%= form_with model: [@game, @player], url: join_game_path(@game), local: true, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :nickname, "Your Nickname", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :nickname, placeholder: "Enter your nickname", maxlength: 20,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-center text-xl focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>
    
    <%= f.submit "Join Game", class: "w-full bg-green-600 text-white py-3 px-6 rounded-lg text-lg font-semibold hover:bg-green-700 transition" %>
  <% end %>
  
  <div class="mt-6">
    <%= link_to "â† Back to Games", root_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
