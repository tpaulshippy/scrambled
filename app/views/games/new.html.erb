<div class="w-full max-w-4xl mx-auto">
  <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
    <div class="text-center mb-8">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Create New Game</h1>
      <p class="text-lg text-gray-600">Set up your word scramble game</p>
    </div>
    
    <%= form_with model: @game, local: true, class: "max-w-lg mx-auto space-y-8" do |f| %>
      <div class="bg-gray-50 rounded-xl p-6">
        <%= f.label :max_score, "Maximum Score", class: "block text-lg font-medium text-gray-700 mb-4 text-center" %>
        <%= f.number_field :max_score, value: 5, min: 1, max: 20, 
            class: "w-full px-6 py-4 border border-gray-300 rounded-xl text-center text-3xl font-bold focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
        <p class="text-sm text-gray-500 mt-3 text-center">First player to reach this score wins the game</p>
      </div>
      
      <%= f.submit "Create Game", class: "w-full bg-blue-600 text-white py-4 px-8 rounded-xl text-xl font-semibold hover:bg-blue-700 transition-all duration-200 shadow-md hover:shadow-lg" %>
    <% end %>
    
    <div class="text-center mt-8">
      <%= link_to "← Back to Games", root_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" %>
    </div>
  </div>
</div>
