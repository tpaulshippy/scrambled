<div class="max-w-md mx-auto text-center">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Create New Game</h1>
  
  <%= form_with model: @game, local: true, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :max_score, "Maximum Score", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.number_field :max_score, value: 5, min: 1, max: 20, 
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-center text-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <p class="text-xs text-gray-500 mt-1">First player to reach this score wins</p>
    </div>
    
    <%= f.submit "Create Game", class: "w-full bg-blue-600 text-white py-3 px-6 rounded-lg text-lg font-semibold hover:bg-blue-700 transition" %>
  <% end %>
  
  <div class="mt-6">
    <%= link_to "â† Back to Games", root_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
