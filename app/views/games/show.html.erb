<% content_for :body_class, "game-page" %>
<%= turbo_stream_from "game_#{@game.id}" %>
<% if @current_player %>
  <%= turbo_stream_from "game_#{@game.id}_player_#{@current_player.id}" %>
<% end %>

<div class="w-full h-full max-w-7xl mx-auto" data-controller="scramble" 
     data-scramble-game-id-value="<%= @game.id %>" 
     data-scramble-player-id-value="<%= session[:player_id] %>">
  
  <!-- Header with game info -->
  <div class="bg-white rounded-2xl shadow-lg p-4 mb-4">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
      <div class="text-center lg:text-left mb-4 lg:mb-0">
        <h1 class="text-2xl lg:text-3xl font-bold text-gray-900">Word Scramble</h1>
        <div class="text-3xl lg:text-4xl font-mono font-bold text-blue-600 mt-1"><%= @game.code %></div>
      </div>
      
      <div class="text-center lg:text-right">
        <p class="text-gray-600 mb-2">Share this code with your friends!</p>
        <% if @current_player %>
          <p class="text-lg font-medium text-gray-700">Welcome, <%= @current_player.nickname %>!</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main game area - horizontal layout for landscape -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 h-full">
    <!-- Game status - takes up 2/3 on desktop -->
    <div class="lg:col-span-2 order-2 lg:order-1">
      <%= render 'game_status', game: @game, current_player: @current_player %>
    </div>
    
    <!-- Players list - takes up 1/3 on desktop -->
    <div class="lg:col-span-1 order-1 lg:order-2">
      <%= render 'players_list', game: @game %>
      
      <% unless @current_player&.game == @game %>
        <div class="text-center mt-4">
          <%= link_to "Join Game", join_game_path(@game), 
              class: "block w-full bg-green-600 text-white px-6 py-3 rounded-xl text-lg font-semibold hover:bg-green-700 transition-all duration-200" %>
        </div>
      <% end %>
      
      <div class="text-center mt-4">
        <%= link_to "← Back to Games", root_path, class: "text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" %>
      </div>
    </div>
  </div>
</div>
