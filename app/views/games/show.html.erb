<% content_for :body_class, "game-page" %>
<%= turbo_stream_from "game_#{@game.id}" %>
<% if @current_player %>
  <%= turbo_stream_from "game_#{@game.id}_player_#{@current_player.id}" %>
<% end %>

<div class="w-full h-full max-w-7xl mx-auto flex flex-col" data-controller="scramble" 
     data-scramble-game-id-value="<%= @game.id %>" 
     data-scramble-player-id-value="<%= session[:player_id] %>">
  
  <!-- Compact header with game info -->
  <div class="bg-white rounded-xl shadow-lg p-3 mb-3 flex-shrink-0">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div class="text-center sm:text-left mb-2 sm:mb-0">
        <h1 class="text-lg sm:text-xl font-bold text-gray-900">Word Scramble</h1>
        <div class="text-2xl sm:text-3xl font-mono font-bold text-blue-600"><%= @game.code %></div>
      </div>
      
      <div class="text-center sm:text-right">
        <p class="text-xs sm:text-sm text-gray-600 mb-1">Share this code!</p>
        <% if @current_player %>
          <p class="text-sm sm:text-base font-medium text-gray-700">Welcome, <%= @current_player.nickname %>!</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main game area - horizontal layout for landscape -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 flex-1 min-h-0">
    <!-- Game status - takes up 2/3 on small screens -->
    <div class="sm:col-span-2 order-2 sm:order-1 min-h-0">
      <%= render 'game_status', game: @game, current_player: @current_player %>
    </div>
    
    <!-- Players list - takes up 1/3 on small screens -->
    <div class="sm:col-span-1 order-1 sm:order-2 flex flex-col min-h-0">
      <%= render 'players_list', game: @game %>
      
      <% unless @current_player&.game == @game %>
        <div class="text-center mt-2">
          <%= link_to "Join Game", join_game_path(@game), 
              class: "block w-full bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-green-700 transition-all duration-200" %>
        </div>
      <% end %>
      
      <div class="text-center mt-2">
        <%= link_to "← Back", root_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium transition-colors duration-200" %>
      </div>
    </div>
  </div>
</div>
